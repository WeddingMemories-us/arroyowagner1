<div class="container-fluid">
  <h2 class="title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "sm-forms submit" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "sm-forms submit" %>
    </div>
    <div class="checkbox" align="left" style="padding-left: 50%">
      <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "sm-text inline" %>
      <% end -%>      
    </div>
    <br>  

  <div class="actions">
    <%= f.submit "Log in", class: "btn submit btn-semi-mini" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
